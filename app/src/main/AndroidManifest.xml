<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wentura.focus">

    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver android:name="com.wentura.focus.TimerActionReceiver" />

        <activity
            android:name="com.wentura.focus.MainActivity"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.wentura.focus.settings.SettingsActivity"
            android:configChanges="orientation"
            android:label="@string/settings"
            android:parentActivityName="com.wentura.focus.MainActivity"
            android:theme="@style/Theme.NoPreviewWindow" />

        <activity
            android:name="com.wentura.focus.statistics.StatisticsActivity"
            android:configChanges="orientation"
            android:label="@string/statistics"
            android:parentActivityName="com.wentura.focus.MainActivity"
            android:theme="@style/Theme.NoPreviewWindow" />

        <activity
            android:name="com.wentura.focus.applicationlock.ApplicationLockActivity"
            android:configChanges="orientation"
            android:label="@string/app_lock"
            android:parentActivityName="com.wentura.focus.settings.SettingsActivity"
            android:theme="@style/Theme.NoPreviewWindow" />

        <activity
            android:name="com.wentura.focus.activities.Activities"
            android:configChanges="orientation"
            android:label="@string/activities_name"
            android:parentActivityName="com.wentura.focus.MainActivity"
            android:theme="@style/Theme.NoPreviewWindow"
            android:windowSoftInputMode="adjustNothing" />

        <activity
            android:name="com.wentura.focus.activities.ActivitySettings"
            android:configChanges="orientation"
            android:label="@string/activity_settings_name"
            android:parentActivityName="com.wentura.focus.activities.Activities"
            android:theme="@style/Theme.NoPreviewWindow"
            android:windowSoftInputMode="adjustNothing" />

        <activity
            android:name="com.wentura.focus.AboutActivity"
            android:configChanges="orientation"
            android:label="@string/about_activity_name"
            android:parentActivityName="com.wentura.focus.MainActivity"
            android:theme="@style/Theme.NoPreviewWindow" />

        <service android:name="com.wentura.focus.NotificationService" />
        <service android:name="com.wentura.focus.EndNotificationService" />

        <service
            android:name="com.wentura.focus.applicationlock.ApplicationLockService"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

    </application>

</manifest>